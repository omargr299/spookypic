---
import DownloadIcon from "./icons/DownloadIcon.astro";
import ShareButtons from "./ShareButtons.astro";
import Spinner from "./Spinner.astro";

const {imageUrl} = Astro.props;
---

<div class="mainContainer">
    <picture>
        <Spinner />
        <img id="image" src={imageUrl} alt="image" />
    </picture>
    
    <footer>
        <button id="download">
            <DownloadIcon />
        </button>
        
        <ShareButtons shareUrl={Astro.url} />
        
    </footer>
</div>

<style is:global>
    #spinner{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
    }
</style>


<style>
    picture{
        position: relative;
    }
    img{
        object-fit: contain;
        display: block;
        margin: auto;  
        max-width: 80%;             
    }

    footer{
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 30px;
        margin-top: 15px;
    }

    #download{
        background-color: var(--color-secondary-light);
        border-radius: 50%;
        width: 35px;
        height: 35px;
        &:hover{
            background-color: var(--color-primary);
        }
    }

    .mainContainer{
        padding: 15px;
        background-color: var(--background-light-color);
        border-radius: 20px;
        max-width: 500px;
        margin-inline: auto;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
    }
</style>